<code_scheme name="spring-security-project-styles" version="173">
    <JavaCodeStyleSettings>
        <!-- Avoid wildcard imports -->
        <option name="CLASS_COUNT_TO_USE_IMPORT_ON_DEMAND" value="99"/>
        <option name="NAMES_COUNT_TO_USE_IMPORT_ON_DEMAND" value="99"/>
        <option name="PACKAGES_TO_USE_IMPORT_ON_DEMAND">
            <value/>
        </option>

        <!-- Define import layout: standard libraries, org, third-party, custom -->
        <option name="IMPORT_LAYOUT_TABLE">
            <value>
                <package name="" withSubpackages="true" static="true"/> <!-- Static imports -->
                <emptyLine/>
                <package name="java" withSubpackages="true" static="false"/> <!-- Standard libraries -->
                <package name="javax" withSubpackages="true" static="false"/>
                <package name="jakarta" withSubpackages="true" static="false"/>
                <emptyLine/>
                <package name="org" withSubpackages="true" static="false"/> <!-- Third-party -->
                <emptyLine/>
                <package name="com" withSubpackages="true" static="false"/> <!-- Custom project -->
                <emptyLine/>
                <package name="" withSubpackages="true" static="false"/> <!-- Catch-all -->
            </value>
        </option>
    </JavaCodeStyleSettings>

    <!-- Language-specific settings -->
    <codeStyleSettings language="JAVA">
        <option name="WRAP_COMMENTS" value="true"/> <!-- Wrap long comments -->
        <option name="RIGHT_MARGIN" value="120"/> <!-- Recommended line length -->
    </codeStyleSettings>
</code_scheme>